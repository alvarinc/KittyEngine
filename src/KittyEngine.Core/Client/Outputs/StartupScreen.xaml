<UserControl x:Class="KittyEngine.Core.Client.Outputs.StartupScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KittyEngine.Core.Client.Outputs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="powered by" FontSize="24" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="2" Text="Kitty Engine" FontSize="24" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <Image Name="imgLogo" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Height="120" Width="120"  Source="pack://application:,,,/KittyEngine.Core;component/Assets/Images/Logos/Logo04-kana-transparent.png" Stretch="Uniform" />
    </Grid>
</UserControl>
